<!-- views/meals/new.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Schedule New Meal - Meal Calendar</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body { 
            font-family: Arial, sans-serif; 
            margin: 0;
            padding: 0;
            background-color: #f5f5f5; 
        }
    </style>
</head>
<body>
    <!-- Simple Navigation Bar -->
    <%- include('../partials/navigation', { activePage: 'meals' }) %>

    <div class="container">
        <div class="calendar-header">
            <h2>Schedule New Meal</h2>
            <div class="header-actions">
                <a href="/meals" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Meals
                </a>
            </div>
        </div>

        <!-- Show error if exists -->
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-error">
                <i class="fas fa-exclamation-triangle"></i>
                <%= error %>
            </div>
        <% } %>

        <!-- Manual Notification Notice -->
        <%- include('../partials/sms-notice') %>

        <div class="form-container">
            <form action="/meals" method="POST">
                <div class="form-section">
                    <h3><i class="fas fa-calendar"></i> Meal Date & Time</h3>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label for="date">Date *</label>
                            <input type="date" 
                                   id="date" 
                                   name="date" 
                                   value="<%= selectedDate || new Date().toISOString().split('T')[0] %>"
                                   required>
                        </div>
                        
                        <div class="form-group">
                            <label for="time">Time *</label>
                            <select id="time" name="time" required>
                                <option value="">Select time...</option>
                                <option value="5:00 PM">5:00 PM</option>
                                <option value="5:30 PM">5:30 PM</option>
                                <option value="6:00 PM" selected>6:00 PM</option>
                                <option value="6:30 PM">6:30 PM</option>
                                <option value="7:00 PM">7:00 PM</option>
                                <option value="7:30 PM">7:30 PM</option>
                                <option value="8:00 PM">8:00 PM</option>
                            </select>
                        </div>
                    </div>
                </div>
                
                <div class="form-section">
                    <h3><i class="fas fa-users"></i> Sister Missionaries</h3>
                    
                    <div class="form-group">
                        <label>Select Companionship:</label>
                        <div class="companionship-selection">
                            <% if (companionships && companionships.length > 0) { %>
                                <% companionships.forEach(companionship => { %>
                                    <label class="companionship-option">
                                        <input type="radio" 
                                               name="companionship" 
                                               value="<%= companionship._id %>" 
                                               required>
                                        <div class="companionship-card">
                                            <div class="companionship-area">
                                                <strong><%= companionship.area || 'No Area Assigned' %></strong>
                                            </div>
                                            <div class="companionship-missionaries">
                                                <% if (companionship.missionaries && companionship.missionaries.length > 0) { %>
                                                    <% companionship.missionaries.forEach((missionary, index) => { %>
                                                        <span class="missionary-name">
                                                            <%= missionary.fullName || (missionary.firstName + ' ' + missionary.lastName) %>
                                                        </span>
                                                        <% if (index < companionship.missionaries.length - 1) { %> & <% } %>
                                                    <% }); %>
                                                <% } else { %>
                                                    <span class="no-missionaries">No missionaries assigned</span>
                                                <% } %>
                                            </div>
                                            <% if (companionship.phoneNumber) { %>
                                                <div class="companionship-contact">
                                                    <i class="fas fa-phone"></i> <%= companionship.phoneNumber %>
                                                </div>
                                            <% } %>
                                        </div>
                                    </label>
                                <% }); %>
                            <% } else { %>
                                <div class="no-companionships">
                                    <p><i class="fas fa-exclamation-triangle"></i> No companionships available.</p>
                                    <p>Please add companionships first before creating meals.</p>
                                    <a href="/companionships/new" class="btn btn-primary">
                                        <i class="fas fa-plus"></i> Add Companionship
                                    </a>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
                
                <div class="form-section">
                    <h3><i class="fas fa-utensils"></i> Meal Arrangement</h3>
                    
                    <div class="form-group">
                        <label for="deliveryType">Meal Type</label>
                        <select id="deliveryType" name="deliveryType">
                            <option value="dining">Sisters dine with family</option>
                            <option value="delivery">Family will deliver the meal</option>
                            <option value="pickup">Missionaries will pick up the meal</option>
                        </select>
                    </div>
                </div>
                
                <div class="form-section">
                    <h3><i class="fas fa-home"></i> Family Assignment (Optional)</h3>
                    
                    <div class="form-group">
                        <label for="family">Assign Family</label>
                        <select id="family" name="family">
                            <option value="">Leave unassigned (families can sign up)</option>
                            <% if (typeof families !== 'undefined' && families && families.length > 0) { %>
                                <% families.forEach(family => { %>
                                    <option value="<%= family._id %>">
                                        <%= family.familyName %> - <%= family.contactName %>
                                    </option>
                                <% }); %>
                            <% } %>
                        </select>
                        <small class="form-help">Leave blank to allow families to sign up themselves</small>
                        
                        <% if (typeof families === 'undefined' || !families || families.length === 0) { %>
                            <div class="info-message">
                                <i class="fas fa-info-circle"></i>
                                No families in database. <a href="/families/new">Add families</a> to assign them directly.
                            </div>
                        <% } %>
                    </div>
                </div>
                
                <div class="form-section">
                    <h3><i class="fas fa-sticky-note"></i> Additional Information</h3>
                    
                    <div class="form-group">
                        <label for="notes">Notes</label>
                        <textarea id="notes" name="notes" rows="4" placeholder="Any special instructions, dietary restrictions, or additional information..."></textarea>
                    </div>
                </div>
                
                <div class="form-actions">
                    <a href="/meals" class="btn btn-secondary">Cancel</a>
                    <% if (typeof companionships !== 'undefined' && companionships && companionships.length > 0) { %>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Schedule Meal
                        </button>
                    <% } else { %>
                        <button type="button" class="btn btn-primary" disabled onclick="alert('Please add companionships first')">
                            <i class="fas fa-exclamation-triangle"></i> Add Companionships First
                        </button>
                    <% } %>
                </div>
            </form>
        </div>
    </div>

    <style>
        .form-container {
            max-width: 800px;
            margin: 0 auto;
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            overflow: hidden;
        }
        
        .form-section {
            padding: 2rem;
            border-bottom: 1px solid #e9ecef;
        }
        
        .form-section:last-of-type {
            border-bottom: none;
        }
        
        .form-section h3 {
            color: #2c3e50;
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1.5rem;
        }
        
        .form-group {
            margin-bottom: 1.5rem;
        }
        
        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 600;
            color: #2c3e50;
        }
        
        .form-group input,
        .form-group select,
        .form-group textarea {
            width: 100%;
            padding: 0.75rem;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            font-size: 1rem;
            transition: border-color 0.3s ease;
        }
        
        .form-group input:focus,
        .form-group select:focus,
        .form-group textarea:focus {
            outline: none;
            border-color: #3498db;
            box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.1);
        }
        
        .form-help {
            display: block;
            font-size: 0.8rem;
            color: #7f8c8d;
            margin-top: 0.25rem;
            font-style: italic;
        }
        
        .missionary-selection {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1rem;
            max-height: 300px;
            overflow-y: auto;
            padding: 1rem;
            background: #f8f9fa;
            border-radius: 8px;
            border: 2px solid #e9ecef;
        }
        
        .missionary-option {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            cursor: pointer;
            margin-bottom: 0;
        }
        
        .missionary-option input[type="checkbox"] {
            width: auto;
            margin: 0;
        }
        
        .missionary-card-small {
            background: white;
            padding: 1rem;
            border-radius: 8px;
            border: 2px solid transparent;
            transition: all 0.3s ease;
            flex: 1;
        }
        
        .missionary-option input[type="checkbox"]:checked + .missionary-card-small {
            border-color: #3498db;
            background: #ebf3fd;
        }
        
        .missionary-card-small strong {
            display: block;
            color: #2c3e50;
            margin-bottom: 0.25rem;
        }
        
        .missionary-card-small small {
            color: #7f8c8d;
            font-style: italic;
        }
        
        .no-missionaries {
            text-align: center;
            padding: 2rem;
            color: #7f8c8d;
        }
        
        .no-missionaries i {
            font-size: 2rem;
            margin-bottom: 1rem;
            color: #e74c3c;
        }
        
        .no-missionaries h4 {
            color: #34495e;
            margin-bottom: 0.5rem;
        }
        
        /* Companionship Selection Styles */
        .companionship-selection {
            display: grid;
            grid-template-columns: 1fr;
            gap: 1rem;
            max-height: 400px;
            overflow-y: auto;
            padding: 1rem;
            background: #f8f9fa;
            border-radius: 8px;
            border: 2px solid #e9ecef;
        }
        
        .companionship-option {
            display: block;
            cursor: pointer;
            margin-bottom: 0;
        }
        
        .companionship-option input[type="radio"] {
            position: absolute;
            opacity: 0;
            width: 1px;
            height: 1px;
            overflow: hidden;
            clip: rect(0, 0, 0, 0);
            white-space: nowrap;
        }
        
        .companionship-card {
            background: white;
            padding: 1.5rem;
            border-radius: 8px;
            border: 2px solid transparent;
            transition: all 0.3s ease;
            position: relative;
        }
        
        .companionship-option input[type="radio"]:checked + .companionship-card {
            border-color: #3498db;
            background: #ebf3fd;
            box-shadow: 0 2px 8px rgba(52, 152, 219, 0.2);
        }
        
        .companionship-option input[type="radio"]:checked + .companionship-card::before {
            content: "✓";
            position: absolute;
            top: 10px;
            right: 15px;
            background: #3498db;
            color: white;
            border-radius: 50%;
            width: 24px;
            height: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 14px;
        }
        
        .companionship-area {
            font-size: 1.1rem;
            color: #2c3e50;
            margin-bottom: 0.5rem;
        }
        
        .companionship-missionaries {
            color: #5a6c7d;
            margin-bottom: 0.5rem;
        }
        
        .missionary-name {
            font-weight: 500;
        }
        
        .companionship-contact {
            color: #7f8c8d;
            font-size: 0.9rem;
        }
        
        .companionship-contact i {
            margin-right: 0.5rem;
        }
        
        .no-companionships {
            text-align: center;
            padding: 2rem;
            color: #7f8c8d;
        }
        
        .no-companionships i {
            font-size: 2rem;
            margin-bottom: 1rem;
            color: #e74c3c;
        }
        
        .info-message {
            background: #e3f2fd;
            border: 1px solid #2196f3;
            border-radius: 6px;
            padding: 0.75rem;
            margin-top: 0.5rem;
            font-size: 0.9rem;
            color: #1976d2;
        }
        
        .info-message i {
            margin-right: 0.5rem;
        }
        
        .alert {
            padding: 1rem;
            margin-bottom: 1rem;
            border-radius: 8px;
            border-left: 4px solid;
        }
        
        .alert-error {
            background-color: #f8d7da;
            border-color: #e74c3c;
            color: #721c24;
        }
        
        .form-actions {
            padding: 2rem;
            background: #f8f9fa;
            display: flex;
            gap: 1rem;
            justify-content: flex-end;
        }
        
        @media (max-width: 768px) {
            .form-row {
                grid-template-columns: 1fr;
            }
            
            .missionary-selection {
                grid-template-columns: 1fr;
            }
            
            .form-actions {
                flex-direction: column;
            }
        }
    </style>

    <script>
        // Set minimum date to today
        const today = new Date().toISOString().split('T')[0];
        const dateInput = document.getElementById('date');
        
        // Set minimum date
        dateInput.min = today;
        
        // Get selected date from server (safely)
        const selectedDateFromServer = '<%= typeof selectedDate !== "undefined" && selectedDate ? selectedDate : "" %>';
        
        // Set default date - either from URL parameter or today
        if (selectedDateFromServer && selectedDateFromServer.trim() !== '') {
            console.log('Setting date from URL parameter:', selectedDateFromServer);
            dateInput.value = selectedDateFromServer;
        } else {
            console.log('Setting date to today:', today);
            dateInput.value = today;
        }
        
        // Auto-select default time if none selected
        document.addEventListener('DOMContentLoaded', function() {
            const timeSelect = document.getElementById('time');
            if (!timeSelect.value) {
                timeSelect.value = '6:00 PM';
            }
            
            // Add click handlers for companionship cards
            const companionshipCards = document.querySelectorAll('.companionship-option');
            companionshipCards.forEach(function(card) {
                card.addEventListener('click', function() {
                    const radioButton = this.querySelector('input[type="radio"]');
                    if (radioButton) {
                        radioButton.checked = true;
                        
                        // Remove any previous validation error styling
                        const companionshipSection = document.querySelector('.companionship-selection');
                        companionshipSection.style.borderColor = '#e9ecef';
                        
                        // Remove any error messages
                        const existingError = document.querySelector('.companionship-error');
                        if (existingError) {
                            existingError.remove();
                        }
                    }
                });
            });
        });
        
        // Enhanced form validation
        document.querySelector('form').addEventListener('submit', function(e) {
            const selectedCompanionship = document.querySelector('input[name="companionship"]:checked');
            
            if (!selectedCompanionship) {
                e.preventDefault();
                
                // Highlight the companionship section
                const companionshipSection = document.querySelector('.companionship-selection');
                companionshipSection.style.borderColor = '#e74c3c';
                companionshipSection.style.boxShadow = '0 0 0 3px rgba(231, 76, 60, 0.1)';
                
                // Add error message if it doesn't exist
                let errorMessage = document.querySelector('.companionship-error');
                if (!errorMessage) {
                    errorMessage = document.createElement('div');
                    errorMessage.className = 'companionship-error alert alert-error';
                    errorMessage.innerHTML = '<i class="fas fa-exclamation-triangle"></i> Please select a companionship for this meal.';
                    companionshipSection.parentNode.insertBefore(errorMessage, companionshipSection);
                }
                
                // Scroll to the companionship section
                companionshipSection.scrollIntoView({ behavior: 'smooth', block: 'center' });
                
                return false;
            }
            
            console.log('Form submitting with companionship:', selectedCompanionship.value);
            console.log('Form submitting with date:', dateInput.value);
        });
    </script>
</body>
</html>